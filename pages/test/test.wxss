/* @import '../../miniprogram_npm/weui-miniprogram/weui-wxss/dist/style/weui.wxss'; */
page {
   background-color: #FFFFFF;
   height: 100%;
}

.weui-tabs-bar__wrp {
   border-bottom: 1px solid #eee;
   /* margin-top: 10px; */
}

.weui-tabs-swiper {
   width: 100%;

   /* overflow: scroll; */
}

.tab-content {
   /* height: 100px; */
   width: 98%;
   height: auto;
   display: flex;
   justify-content: center;
   align-items: center;
   box-sizing: border-box;
   flex-flow: column;
   position: absolute;
   display: -webkit-box;
   left: 1%;
}

cover-view {
   color: white;
   width: auto;
   padding: 10px;
   font-size: 18px;
}

.title {
   position: absolute;
   top: 0;
   left: 5px;
   color: white;
   word-wrap: break-word;
   font-size: 18px;
}

.tab-content-item {
   width: 98%;
   height: 250px;
   margin: 10px 1%;
   /* background: red; */
   position: relative;
   border-radius: 10px;
}

.weui-tabs-bar__title {
   margin: 0px 10px;
}

.tab-bar-title__selected {
   font-size: 20px;
   font-weight: bold;
   margin-top: -10px;

}

/* 自定义 */
.weui-tabs-bar__content {
   white-space: nowrap;
   display: flex;
   flex: 1;
   flex-flow: row nowrap;
   justify-content: space-around;
}

video,
image {
   width: 100%;
   height: 100%;
   border-radius: 10px;
}

.playIcon {
   width: 100%;
   height: 100%;

}

.image_box {
   width: 50px;
   height: 50px;

   z-index: 1000;
   position: absolute;
   top: 100px;

   left: 50%;

}

.btn {
   width: 48px;
   height: 48px;
   position: absolute;
   top: 130px;
   right: 15px;
   border-radius: 50%;
}