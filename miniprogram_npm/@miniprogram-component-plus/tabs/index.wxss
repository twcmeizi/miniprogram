.weui-tabs {
   width: 100%;
   height:100%;
}

.weui-tabs-bar__wrp {
   width: 100%;
   background: #fff;
   position: fixed;
   top: 0;
   left: 0;
   z-index: 100;
   height: 32px;
   line-height: 30px;
}

.content{
   width: 100%;
   height: calc(100% - 30)px;
   position: relative;
   top: 32px;
}
.weui-tabs-bar__content {
   width: 100%;
   white-space: nowrap
}

.weui-tabs-bar__item {
   display: inline-block
}

.weui-tabs-bar__title {
   display: inline-block;
   border-bottom-width: 2px;
   border-bottom-style: solid;
   border-bottom-color: transparent
}